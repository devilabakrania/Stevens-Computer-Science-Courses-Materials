<section>
    {{#if message}}
    <div>
        <p class="error">{{message}}</p>
    </div>
    {{/if}}
    <p>{{msg}}</p>
    <h2>Admin Login</h2>
    <form id="login-form" method="POST" action="/adminLogin">
        <label>Email</label>
        <input type="email" id="email" name="email" placeholder="Enter Email"><br>

        <label for="password" class="text">Password</label>
        <input id="password" type="password" name="password" class="validate text" placeholder="Enter Password"
            required><br><br>

        <button type="submit">Submit</button><br><br>

        <p class="inline">Not Admin?</p><a class="auth" href="/login">Login Here</a><br>

        <br>
    </form>
</section>
